
<h1>Orders for <%= current_user.username %></h1>
  <div class="container scumbag-orders">
    <div class="jumbotron orders">

      <div class="row">
        <div class="col-xs-2">
          <h3>Order Number</h3>
        </div>
        <div class="col-xs-2">
          <h3>Date</h3>
        </div>
        <div class="col-xs-2">
            <h3>Total Price</h3>
        </div>

        <div class="col-xs-2">
            <h3>Status</h3>
        </div>

        <div class="col-xs-2">
          <h3>View</h3>
        </div>
      </div>

  <div class="line-separator"></div>
  <% @orders.each do |order| %>

    <div class="row">

      <div class="col-xs-2 order-id">
        <%= order.id %>
      </div>

      <div class="col-xs-2 order-date">
        <%= order.created_at %>
      </div>

      <div class="col-xs-2 order-price">
          <%= order.total_price %>
      </div>

      <div class="col-xs-2">
        <%= order.status %>
      </div>

      <div class="col-xs-2">
          <%= link_to "View", order_path(order) %>
      </div>

    </div>
  <%end %>
</div>
