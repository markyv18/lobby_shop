<h1>Orders for <%= @current_user.username %></h1>

<div class="jumbotron">
    <div class="container scumbag-cart-item">
      <div class="row">
        <div class="col-xs-2">
          <h3>Order Number</h3>
        </div>
        <div class="col-xs-2">
          <h3>Date</h3>
        </div>
        <div class="col-xs-2">
            <h3>Total Price</h3>
        </div>

        <div class="col-xs-2">
            <h3>Status</h3>
        </div>

        <div class="col-xs-2">
          <h3>View</h3>
        </div>
      </div>

  <div class="line-separator"></div>
  <% @orders.each do |order| %>

    <div class="row">

      <div class="col-xs-2" id="cart-img">
      <%= order.id %>
      </div>

      <div class="col-xs-2">
        <%= order.created_at %>%
      </div>

      <div class="col-xs-2">
          <%= order.total_price %>
      </div>

      <div class="col-xs-2">
        <%= order.status %>
      </div>

      <div class="col-xs-2">
          <%= link_to "View", order_path(order) %>
      </div>

    </div>
  <%end %>
</div>
